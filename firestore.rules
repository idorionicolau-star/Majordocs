
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // -------------------------------------------------------------------------
    // Helper Functions
    // -------------------------------------------------------------------------

    /**
     * Returns true if the user is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }
    
    /**
      * Returns true if the user owns the data they are trying to access,
      * identified by their companyId.
      */
    function isCompanyMember(companyId) {
        return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyId == companyId;
    }

    // -------------------------------------------------------------------------
    // Collection Rules
    // -------------------------------------------------------------------------

    match /users/{userId} {
      // Any authenticated user can manage their own profile.
      allow read, write: if isSignedIn() && request.auth.uid == userId;

      // Rules for subcollections within a user's company data.
      // This allows any employee to read/write data within their company's scope.
      match /{collection}/{docId} {
        allow read, write: if isSignedIn() && isCompanyMember(userId);
      }
    }
  }
}

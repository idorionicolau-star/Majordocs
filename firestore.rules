
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // -------------------------------------------------------------------------
    // Helper Functions
    // -------------------------------------------------------------------------

    /**
     * Returns true if the user is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * Returns true if the authenticated user's UID matches the provided userId.
     * This is the primary function for enforcing data ownership.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * Returns true if the user is the owner of an existing document.
     * Combines ownership and existence checks for state-changing operations.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && exists(request.path);
    }
    
    /**
      * Returns true if the user is the owner of the company associated
      * with the document being accessed.
      */
    function isCompanyOwner(companyId) {
      return isSignedIn() && request.auth.uid == companyId;
    }
    
    /**
      * Returns true if the incoming request is for a list operation
      * that is correctly filtered by companyId.
      */
    function isReadingOwnCompanyDocs() {
        return 'companyId' in request.query && request.query.companyId == request.auth.uid;
    }


    // -------------------------------------------------------------------------
    // Collection Rules
    // -------------------------------------------------------------------------

    match /users/{userId} {
      allow read: if isOwner(userId) || (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && resource.data.companyId == request.auth.uid);
      allow list: if isReadingOwnCompanyDocs();
      allow create: if isCompanyOwner(request.resource.data.companyId);
      allow update: if isOwner(userId) || isCompanyOwner(resource.data.companyId);
      allow delete: if isCompanyOwner(resource.data.companyId);
    }
    
    match /users/{userId}/{document=**} {
      allow read, write: if isOwner(userId);
    }
  }
}

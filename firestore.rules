
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // -------------------------------------------------------------------------
    // Helper Functions
    // -------------------------------------------------------------------------

    /**
     * Returns true if the user is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * Returns true if the authenticated user's UID matches the provided userId.
     * This is the primary function for enforcing data ownership.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    /**
      * Returns true if the user owns the data they are trying to access,
      * identified by their companyId.
      */
    function isCompanyMember(companyId) {
        return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyId == companyId;
    }

    /**
     * Returns true if the incoming request is for a list operation
     * that is correctly filtered by companyId.
     */
    function isReadingOwnCompanyDocs() {
        return 'companyId' in request.query && request.query.companyId == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyId;
    }


    // -------------------------------------------------------------------------
    // Collection Rules
    // -------------------------------------------------------------------------

    match /users/{userId} {
      // Admins can manage their own profile and their employees' profiles.
      // Employees can only read their own profile.
      allow read: if isOwner(userId) || isCompanyMember(userId);
      allow create: if request.auth.uid == request.resource.data.companyId; // Admin creating an employee
      allow update: if isOwner(userId) || isCompanyMember(userId);
      allow delete: if isCompanyMember(userId); // Admin deleting an employee
      allow list: if isReadingOwnCompanyDocs();

      // Any authenticated user can access subcollections if they are a member of the company.
      match /{document=**} {
        allow read, write, create, update, delete: if isCompanyMember(userId);
      }
    }
  }
}

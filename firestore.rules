rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Função auxiliar para verificar se o utilizador está autenticado
    function isSignedIn() {
      return request.auth != null;
    }

    // 1. Regras para o "Mapa de Utilizadores" (/users/{uid})
    match /users/{userId} {
      // O utilizador só pode ler o seu próprio "BI"
      allow read: if isSignedIn() && request.auth.uid == userId;
      // Só pode criar ou editar se for o próprio (e não pode mudar o seu próprio companyId após criado, por segurança)
      allow create, update: if isSignedIn() && request.auth.uid == userId;
    }

    // 2. Regras para a estrutura de Empresas
    match /companies/{companyId} {
      
      // Função para verificar se o utilizador pertence a ESTA empresa específica
      function belongsToCompany() {
        return isSignedIn() && 
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyId == companyId;
      }

      // Leitura da empresa: apenas membros
      allow read: if belongsToCompany();
      // Escrita na empresa: apenas para o Admin da empresa
      allow update: if belongsToCompany() && 
        get(/databases/$(database)/documents/companies/$(companyId)/employees/$(request.auth.uid)).data.role == 'Admin';

      // 3. Regras para subcoleções (Produtos, Vendas, Funcionários, etc.)
      match /{collectionName}/{docId} {
        
        // Função para obter as permissões do funcionário dentro da empresa
        function getEmployeeData() {
          return get(/databases/$(database)/documents/companies/$(companyId)/employees/$(request.auth.uid)).data;
        }

        // Permissão de Leitura baseada no sistema que criámos
        allow read: if belongsToCompany() && 
          (getEmployeeData().role == 'Admin' || getEmployeeData().permissions[collectionName] in ['read', 'write']);

        // Permissão de Escrita baseada no sistema que criámos
        allow write: if belongsToCompany() && 
          (getEmployeeData().role == 'Admin' || getEmployeeData().permissions[collectionName] == 'write');
      }
    }
  }
}


rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- HELPER FUNCTIONS ---

    function isSignedIn() {
      return request.auth != null;
    }

    function getUserData(uid) {
      // Note: This path needs to be dynamically determined in a real multi-tenant app.
      // For now, this is a placeholder. A robust solution would involve a top-level
      // user collection to find the companyId from a userId.
      // This is simplified for this context. We'll assume we can get it.
      // A more realistic approach would be to pass companyId into the function.
      let companyId = get(/databases/$(database)/documents/users/$(uid)).data.companyId;
      return get(/databases/$(database)/documents/companies/$(companyId)/employees/$(uid)).data;
    }

    function isEmployeeOf(companyId) {
      // Checks if the requesting user's UID exists in the employees subcollection for the given company.
      return isSignedIn() && exists(/databases/$(database)/documents/companies/$(companyId)/employees/$(request.auth.uid));
    }
    
    function isAdminOf(companyId) {
      // Checks if the user is an employee and their role is 'Admin'.
      return isEmployeeOf(companyId) && get(/databases/$(database)/documents/companies/$(companyId)/employees/$(request.auth.uid)).data.role == 'Admin';
    }

    // --- COLLECTIONS ---

    // Company documents can be created during registration.
    // Reading/updating requires being an employee/admin of that specific company.
    match /companies/{companyId} {
      allow create: if true; // Allows company registration
      allow read: if isEmployeeOf(companyId);
      allow update, delete: if isAdminOf(companyId);
    }

    // Employees subcollection
    match /companies/{companyId}/employees/{employeeId} {
      // Allow read only if you are an Admin of the company.
      // This protects sensitive fields like password from other employees.
      allow read: if isAdminOf(companyId);
      
      // Any employee can list the users (to see names/roles), but the 'read' rule above
      // will prevent them from getting the full document with the password.
      allow list: if isEmployeeOf(companyId);

      // Create is allowed by Admins.
      allow create: if isAdminOf(companyId);
      
      // Update/delete is allowed by Admins.
      allow update, delete: if isAdminOf(companyId);
    }
    
    // Catalog is managed by Admins
    match /companies/{companyId}/catalogProducts/{productId} {
        allow read: if isEmployeeOf(companyId);
        allow write: if isAdminOf(companyId);
    }
    match /companies/{companyId}/catalogCategories/{categoryId} {
        allow read: if isEmployeeOf(companyId);
        allow write: if isAdminOf(companyId);
    }

    // Inventory can be read by anyone in the company, but only written by Admins
    match /companies/{companyId}/products/{productId} {
      allow read: if isEmployeeOf(companyId);
      allow write: if isAdminOf(companyId);
    }
    
    // Sales can be read by anyone, and created/updated by any employee
    match /companies/{companyId}/sales/{saleId} {
        allow read: if isEmployeeOf(companyId);
        allow write: if isEmployeeOf(companyId);
    }
    
    // Production and Orders can be read by anyone, but only written by Admins
    match /companies/{companyId}/productions/{productionId} {
        allow read: if isEmployeeOf(companyId);
        allow write: if isAdminOf(companyId);
    }
    
    match /companies/{companyId}/orders/{orderId} {
        allow read: if isEmployeeOf(companyId);
        allow write: if isAdminOf(companyId);
    }
  }
}

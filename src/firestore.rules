
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions to check user roles and ownership
    function isSignedIn() {
      return request.auth != null;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isEmployee(companyId) {
      return isSignedIn() && getUserData().companyId == companyId;
    }
    
    function isAdmin(companyId) {
       return isEmployee(companyId) && getUserData().role == 'Admin';
    }

    // Rules for the users collection
    match /users/{userId} {
      // Allow user creation for registration and for the temporary employee accounts
      allow create: if true;
      // Allow a user to read/update their own profile
      allow read, update: if isSignedIn() && request.auth.uid == userId;
      // Allow an Admin to list users of their own company
      allow list: if isSignedIn() && isAdmin(request.query.where[0][2]);
      // Allow an Admin to delete an employee's account from the same company
      allow delete: if isSignedIn() && isAdmin(get(/databases/$(database)/documents/users/$(userId)).data.companyId);
    }
    
    // Rules for the companies collection
    match /companies/{companyId} {
        // Anyone signed in can create a company (initial setup)
        allow create: if isSignedIn();
        // Only employees of the company can read company details. Admin can update.
        allow read: if isEmployee(companyId);
        allow update: if isAdmin(companyId);
    }

    // This rule allows Admins to manage employees for their own company.
    match /companies/{companyId}/employees/{employeeId} {
      allow read, write: if isAdmin(companyId);
    }

    // Rules for all other subcollections within a company document
    match /companies/{companyId}/{collection}/{docId} {
      // Any employee of the company can read data within their company's collections
      allow read: if isEmployee(companyId);
      // Admins have full write access (create, update, delete)
      allow write: if isAdmin(companyId);
      // Employees can create certain documents (e.g. sales, productions)
      allow create: if isEmployee(companyId) && collection != 'employees';
    }
  }
}
